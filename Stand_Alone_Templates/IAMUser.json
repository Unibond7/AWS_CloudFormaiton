{
  "Parameters" : {
    "MyUserName" : {
      "Descfription" : "Using the recommended format for user name",
      "Type" : "String",
      "Default" : "Tim",
      "AllowedValues" : [ "Tim" , "Ruby", "Joe" ]
    }
  },
  "MyAccessKey" : {
   "Type" : "AWS::IAM::AccessKey",
   "Properties" : {
      "UserName" : { "Ref" : "MyUserName" }
    }
  },
  "itsameuser" : {
    "Type" : "AWS::IAM::User",
    "Properties" : {
      "UserName" : {"Fn::Join": ["", [{"Ref": "AWS::Region"}, {"Ref": "MyUserName"}]]},
      "Policies" : [ {
        "PolicyName" : "prettymuchroot",
        "PolicyDocument" : {
          "Version" : "2012-10-17",
          "Statement" : [
            {
              "Effect" : "Allow",
              "Action" : "*",
              "Resource" : "*"
            }
          ]
        }
      } ]
    }
  },
  "Outputs" : {
  "MyAccessKeyId": {
    "Ref" : "MyAccessKey"
    },
  "MySecretKey": {
    "Fn::GetAtt": [ "MyAccessKey", "SecretAccessKey" ]
    }
  }
}
